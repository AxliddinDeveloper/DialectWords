<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DialectWords</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DialectWords.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/images.png" />
</head>
<body>
    <header class=" container d-flex align-items-center">
        
    </header>
    <div class="container-fluid">
        <main id="main-wrapper" role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/layout-routing.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>