@model WordsViewModel
@{
    ViewData["Title"] = "GetAllWords";
}

<form method="get" asp-action="SearchWord" class="form-group">
    <div class="form-group">
        <label>Search</label>
        <input type="text" id="searchString" name="searchString" class="form-group" />
    </div>
</form>
<form method="get" asp-action="GetAllWords" class="form-group">
    <label>Page Size</label>
    <select name="pageSize">
        <option value=1>1</option>
        <option value=50>50</option>
        <option value=100>100</option>
    </select>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Group Name</th>
        </tr>

    </thead>
    <tbody>
        @{
            <div>
                @{
                    int i = 1;
                    @foreach (var word in Model.Words)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@word.AdabiyTil</td>
                            <td>@word.Turkum</td>
                            <td>@word.IngilizTilida</td>
                            <td>@word.RusTilida</td>
                            <td>@word.Transliteratsiya</td>
                        </tr>
                        i += 1;
                    }
            }
            </div>
        }
    </tbody>
</table>
@{
    int a = Model.PageNumber;
    if (Model.PageNumber < Model.TotalPages)
        a += 1;

    int b = Model.PageNumber;
    if (Model.PageNumber > 1)
        b -= 1;
    <a asp-action="GetAllWords" asp-route-pageSize="1" asp-route-pageNumber="@b" class="btn btn-outline-light text-black">
        &lt;&lt;
    </a>
    <section class="form-check-inline text-center m-auto">@Model.PageNumber/@Model.TotalPages</section>
    <a asp-action="GetAllWords" asp-route-pageSize="1" asp-route-pageNumber="@a" class="btn btn-outline-light text-black">
        >>
    </a>
}